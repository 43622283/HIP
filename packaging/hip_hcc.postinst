#!/bin/bash
pushd () {
    command pushd "$@" > /dev/null
}

popd () {
    command popd "$@" > /dev/null
}

ROCMDIR=/opt/rocm
HIPDIR=$ROCMDIR/hip

# Soft-link to libraries
HIPLIBFILES=$HIPDIR/lib/*
ROCMLIBDIR=$ROCMDIR/lib
mkdir -p $ROCMLIBDIR
pushd $ROCMLIBDIR
for f in $HIPLIBFILES
do
    ln -s $f $(basename $f)
done
    ln -s $HIPDIR/lib/.hipInfo .hipInfo
popd

